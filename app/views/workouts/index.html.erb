

     <div id="user_admin">
        <div id="section_header">
            <div class="container">
                <div class="row">
                    <div class="wo_header">
                        <div class="wo_title">
                            <h5>CoreHero Client</h5>
                            <h2>Hi, <%= current_user.fullname%></h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    <div id="admin_section">
        <div class="container">
            <div class="row">
                <ul class="nav nav-pills">
                  <li class="active"><%= link_to "Workouts", workouts_path %></li>
                  <li><a href="#meal_plans" data-toggle="tab">Meal Plans</a></li>
                  <li><%= link_to "Surveys", surveys_path %></li>
                </ul>
                <div class="tab-content">
                      <div id="workouts" class="tab-pane active">
						  <% if current_user.workouts.any?%>
                                <h4>My Workouts</h4>
                                <table class="table table-condensed">
                                  <thead>
                                    <tr>
                                      <th>Date Posted</th>
                                      <th>Name</th>
                                      <th>Type</th>
                                      <th>Days Per Week</th>
                                      <th>Completed?</th>
                                    </tr>
                                  </thead>
                                  <tbody>
									  <% @workouts.reverse.each do |workout| %>
									  <% type = type(Workout, workout)%>
								  	  <% respective_path = respective_path(Workout, workout)%>
									  <% status_icon = status_icon(Workout, workout )%>
									  <%# test_code = test_code(Workout, workout, created_at)%>
								 
									  
									 
									  
                                    <tr>
                                      <td><%= workout.start_date %></td>
                                      <td><%= link_to type.title, respective_path %></td>
                                      <td><%= workout.template %></td>
                                      <td><%= type.days %></td>
									  <td><%= image_tag status_icon %><%#= test_code.created_at %></td>
                                   
                                    </tr>
                                    
                                  </tbody>
								  <% end %>
                                </table><% else %>
								<h4>You don't have any workouts to show. Let's change that.</h4>
								<% end %>
                        </div><!-- end #workouts -->
						
						
						
						
						
                    
						
						
						
						
						
                      <div id="surveys" class="tab-pane">
                                <h4>Surveys</h4>
                                <table class="table table-condensed">
                                  <thead>
                                    <tr>
                                      <th>Date Posted</th>
                                      <th>Name</th>
                                      <th>Completed?</th>
                                    </tr>
                                  </thead>
                                  <tbody>
                                    <tr>
                                      <td>9/13/13</td>
                                      <td>2 Week Client Assessment</td>
                                      <td><img src="img/icon_new_orange.png"></td>
                                    </tr>
                                    <tr>
                                      <td>9/6/13</td>
                                      <td>1 Week Client Assessment</td>
                                      <td><img src="img/icon_checkmark-g.png" alt=""></td>
                                    </tr>
                                    <tr>
                                      <td>9/1/13</td>
                                      <td>New Client Assessment</td>
                                      <td><img src="img/icon_checkmark-g.png" alt=""></td>
                                    </tr>
                                  </tbody>
                                </table>
                        </div><!-- end #surveys-->
                  </div><!-- end #tab-content -->
              </div><!-- end .row -->
        </div><!-- end .container -->
    </div><!-- end #admin_section -->

    
       

    