

     <div id="user_admin">
        <div id="section_header">
            <div class="container">
                <div class="row">
                    <div class="wo_header">
                        <div class="wo_title">
                            <h5>CoreHero Client</h5>
                            <h2>Hi, <%= current_user.fullname%></h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    <div id="admin_section">
        <div class="container">
            <div class="row">
                <ul class="nav nav-pills">
                  <li class="active"><a href="#workouts" data-toggle="tab">Workouts</a></li>
                  <li><a href="#meal_plans" data-toggle="tab">Meal Plans</a></li>
                  <li><a href="#surveys" data-toggle="tab">Surveys</a></li>
                </ul>
                <div class="tab-content">
                      <div id="workouts" class="tab-pane active">
						  <% if current_user.workouts.any?%>
                                <h4>My Workouts</h4>
                                <table class="table table-condensed">
                                  <thead>
                                    <tr>
                                      <th>Date Posted</th>
                                      <th>Name</th>
                                      <th>Type</th>
                                      <th>Days Per Week</th>
                                      <th>Completed?</th>
                                    </tr>
                                  </thead>
                                  <tbody>
									  <% @workouts.reverse.each do |workout| %>
								  	<% type = if Workout.strength_workouts.include? workout.template
									   workout.strengthworkout
								      elsif Workout.cardio_workouts.include? workout.template
								         workout.cardioworkout
								      end %>
									  
								  	<% respective_path = if Workout.strength_workouts.include? workout.template
								         workout_strengthworkout_path(workout)
								      elsif Workout.cardio_workouts.include? workout.template
								         workout_cardioworkout_path(workout)
								      end %>
									  
                                    <tr>
                                      <td><%= workout.start_date %></td>
                                      <td><%= link_to type.title, respective_path %></td>
                                      <td><%= workout.template %></td>
                                      <td><%= type.days %></td>
                                      <td><img src="img/icon_new_orange.png"></td>
									  <td><img src="img/icon_checkmark-g.png" alt=""></td>
                                    </tr>
                                    
                                  </tbody>
								  <% end %>
                                </table><% else %>
								<h4>You don't have any workouts to show. Let's change that.</h4>
								<% end %>
                        </div><!-- end #workouts -->
						
						
						
						
						
                      <div id="meal_plans" class="tab-pane">
